<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_start_quiz" parent="AppTheme">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/button_app_name</item>
        <item name="android:text">@string/start</item>
        <item name="android:textColor">@color/t_two</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button_next_question" parent="AppTheme">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/button_app_name</item>
        <item name="android:text">@string/next</item>
        <item name="android:textColor">@color/t_two</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="app_name" parent="AppTheme">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/button_app_name</item>
        <item name="android:text">@string/welcome</item>
        <item name="android:textColor">@color/t_two</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="app_name_result_page" parent="AppTheme">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/button_app_name</item>
        <item name="android:text">@string/welcome</item>
        <item name="android:textColor">@color/t_two</item>
        <item name="android:textSize">25sp</item>
    </style>


    <style name="st_inst_a" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/margin_inst_a</item>
        <item name="android:text">@string/text_inst_a</item>
        <item name="android:textColor">@color/black_txt</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="st_inst_b" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/margin_inst_b</item>
        <item name="android:text">@string/text_inst_b</item>
        <item name="android:textColor">@color/black_txt</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="question" parent="AppTheme">
        <item name="android:layout_margin">@dimen/margin_question</item>
        <item name="android:textColor">@color/black_txt</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="answer_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/margin_answer_buttons_bottom</item>
        <item name="android:background">@drawable/button_answer</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/margin_answer_buttons_bottom</item>
        <item name="android:background">@drawable/button_answer</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button_page_results" parent="AppTheme">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/button_app_name</item>
        <item name="android:text">@string/results</item>
        <item name="android:textColor">@color/t_two</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button_show_results" parent="AppTheme">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/button_app_name</item>
        <item name="android:text">@string/showResults</item>
        <item name="android:textColor">@color/t_two</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button_sent_email" parent="AppTheme">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/button_app_name</item>
        <item name="android:text">@string/sent_email</item>
        <item name="android:textColor">@color/t_two</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button_restart" parent="AppTheme">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/button_app_name</item>
        <item name="android:text">@string/restart</item>
        <item name="android:textColor">@color/t_two</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
